{
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "_pkgtemplates/markdownmermaidjs",
            "default"
        ],
        "postProcessors": [],
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false,
        "force" : true
    },
    "pdf": {
        "content": [
            {
                "files": [
                    "articles/**/*.md",
                    "pdf-articles/**.md"
                ],
                "exclude": [
                    "**/bin/**",
                    "**/obj/**",
                    "_site_pdf/**",
                    "**/toc.yml",
                    "**/toc.md"
                ]
            },
            {
                "files": "pdf/toc.yml"
            }
        ],
        "resource": [
            {
                "files": [
                    "articles/**/*.png",
                    "articles/**/*.svg",
                    "images/**"
                ],
                "exclude": [
                    "**/bin/**",
                    "**/obj/**",
                    "_site_pdf/**"
                ]
            }
        ],
        "wkhtmltopdf": {
            "additionalArguments": "--enable-local-file-access"
        },
        "dest": "_site_pdf",
        "template": [
            "pdf.default"
        ],
        "cleanupCacheHistory": false,
        "force": true
    }
}
